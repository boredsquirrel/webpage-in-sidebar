{

    "manifest_version": 2,
    "name": "Whatsapp in Sidebar",
    "description": "Displays Whatsapp in the sidebar",
    "version": "1.1.1",
    "background": {
      "scripts": ["background.js"]
    },
    "applications": {
        "gecko": {
          "strict_min_version": "60.0"
        }
    },

    "options_ui": {
      "page": "options/options.html",
      "browser_style": true
    },

    "sidebar_action": {
        "default_icon": {
            "48": "whatsapp-favicon.png",
            "96": "whatsapp-favicon.png"
          },
        "default_title": "Whatsapp",
        "default_panel": "sidebar/panel.html"
    },

    "icons": {
        "48": "whatsapp-favicon.png",
        "96": "whatsapp-favicon.png"
      },

    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Alt+Shift+7"
            },
            "description": "Toggle the Whatsapp sidebar."
        }
    },
    "browser_action": {
      "default_icon": {
        "16": "whatsapp-favicon.png",
        "32": "whatsapp-favicon.png"
      }
    }
}
